@model IEnumerable<ASP_CRUD.Models.Employee>

@{
    ViewData["Title"] = "Index";
}

<h4>Employee Records</h4>



<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmpCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Position)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OfficeLocation)
            </th>
            <th>
                <a asp-action="AddOrEdit" class="btn btn-outline-success">
                    <i class="far fa-plus-square"></i>
                    Create New
                </a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmpCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Position)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OfficeLocation)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.EmployeeId" class="mr-2 ml-2"><i class="fas fa-id-badge fa-lg"></i></a> |

                    <a asp-action="AddOrEdit" asp-route-id="@item.EmployeeId" class="mr-2 ml-2"><i class="fa fa-marker fa-lg"></i></a> |

                    <a asp-action="Delete" asp-route-id="@item.EmployeeId" class="text-danger mr-2 ml-2" onclick="return confirm(" Delete this employee?"><i class="fa fa-trash-alt fa-lg"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
