@model ASP_CRUD.Models.Employee

@{
    ViewData["Title"] = "Details";
}


<div>
    <a asp-action="Index" class="btn btn-secondary btn-group-sm"> <i class="fas fa-arrow-circle-left mr-1"></i>Back</a>
</div>


<div class="mx-auto">
    <img src="https://picsum.photos/300/300" class="rounded-circle mx-auto d-block" alt="...">

    <hr />
     
    <div class="mt-3 text-center">
        <h3 class="font-weight-normal">@Html.DisplayFor(modelItem => modelItem.FullName)</h3>
        <h4 class="font-weight-light">
            <i class="fas fa-map-marker-alt"></i>
